<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>

        <%- include('../includes/navigation.ejs') %>

            <main>
                <% let sum = 0 %>
                <% if (orders.length <=0) { %>
                    <h1>My Orders</h1>
                <% } else { %>
                    <ul>
                        <% orders.forEach(order => { %>
                            <li>
                                <h1># <%= order._id %></h1>
                                <ul>
                                    <% order.products.forEach(p => { %>
                                        <li>
                                            <%= p.product.title %> (<%= p.quantity %>)
                                        </li>
                                        <% sum += p.product.price %>
                                        <% }) %>
                                </ul>
                                <h3>Sub Total: $ <%= sum %></h3>
                            </li>
                        <% }) %>
                    </ul>
                <% } %>

            </main>

            <%- include('../includes/end.ejs') %>